    <script>
    $(document).ready(function () {
            $('.count').prop('disabled', true);
            $(document).on('click', '.plus', function () {
                var s=this.id;
                s=s.substring(2);
                $('#'+s).val(parseInt($('#'+s).val()) + 1);
            });
            $(document).on('click', '.minus', function () {
                var s = this.id;
                s = s.substring(2);
                $('#'+s).val(parseInt($('#'+s).val()) - 1);
                if ($('#'+s).val() == 0) {
                    $('#'+s).val(1);
                }
            });
            $(".add-cart").click(function () {
                    var s1 = this.id;
                    s1=s1.substring(1);
